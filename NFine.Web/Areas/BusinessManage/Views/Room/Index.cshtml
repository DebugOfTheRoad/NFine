@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            treeGrid: true,
            treeGridModel: "adjacency",
            ExpandColumn: "F_CommunityName",
            url: "/BusinessManage/Room/GetRoomsTreeGridJson",
            height: $(window).height() - 96,
            colModel: [
                { label: "房间主键", name: "F_Id", hidden: true, key: true },
                { label: "上级房间主键", name: "F_ParentRoomId", hidden: true },
                { label: "房间名称", name: "F_RoomName", width: 200, align: 'left' },
                { label: "小区名称", name: "F_CommunityName", width: 100, align: 'left' },
                { label: "房东信息主键", name: "F_OwnerId", hidden: true },
                { label: '省/直辖市', name: 'F_ProvinceId', width: 100, align: 'left' },
                { label: '市/区', name: 'F_CityId', width: 100, align: 'left' },
                { label: '县', name: 'F_TownId', width: 100, align: 'left' },
                { label: '地址', name: 'F_Address', width: 100, align: 'left' },
                { label: '门牌号', name: 'F_AddressNumber', width: 50, align: 'left' },
                { label: '楼号', name: 'F_BuildingNumber', width: 50, align: 'left' },
                { label: '单元号', name: 'F_SectionNumber', width: 50, align: 'left' },
                { label: '房号', name: 'F_RoomNumber', width: 50, align: 'left' },
                { label: '经度', name: 'F_Lng', width: 100, align: 'left' },
                { label: '纬度', name: 'F_Lat', width: 100, align: 'left' },
                {
                    label: '创建时间', name: 'F_CreatorTime', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
                { label: '备注', name: 'F_Description', width: 300, align: 'left' }
            ]
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增房源",
            url: "/BusinessManage/Room/Form",
            width: "450px",
            height: "340px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Form",
            title: "修改房源",
            url: "/BusinessManage/Room/Form?keyValue=" + keyValue,
            width: "450px",
            height: "340px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/BusinessManage/Room/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

<div class="topPanel">
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary" onclick="btn_add()"><i class="fa fa-plus"></i>新增房源</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改房源</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除房源</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
</div>
